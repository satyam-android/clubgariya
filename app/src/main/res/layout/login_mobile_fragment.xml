<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="MobileLogin"
        type="com.satyam.clubgariya.viewmodels.LoginMobileViewModel" />
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color"
        android:padding="10dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_user_name"
            app:layout_constraintBottom_toTopOf="@+id/til_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:hint="User Name"
                android:inputType="textCapWords"
                android:text="@={MobileLogin.userName}"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_mobile_code"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_mobile_code"
                android:layout_width="match_parent"
                android:hint="User Name"
                android:inputType="phone"
                android:text="@={MobileLogin.countryCode}"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_mobile_number"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/til_mobile_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_mobile_number"
                android:layout_width="match_parent"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:text="@={MobileLogin.mobileNumber}"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_code"
            app:layout_constraintTop_toBottomOf="@+id/til_mobile_number"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_code"
                android:hint="Verification Code"
                android:text="@={MobileLogin.verificationCode}"
                android:layout_width="match_parent"
                android:maxLength="6"
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_register"
            app:layout_constraintTop_toBottomOf="@+id/til_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{MobileLogin::onRegisterBtnClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            />
        <Button
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_verify"
            android:onClick="@{MobileLogin::onVerifyBtnClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
