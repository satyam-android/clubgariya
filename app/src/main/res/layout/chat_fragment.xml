<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="chatModel"
            type="com.satyam.clubgariya.viewmodels.ChatViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/app_background_color"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_header_user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_user_profile"
                android:layout_width="@dimen/medium_icon_width"
                android:layout_height="@dimen/medium_icon_height"
                app:roundAsCircle="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholderImage="@drawable/icon_account"
                 />
            <TextView
                android:id="@+id/tv_chat_with_username"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_title_color"
                app:layout_constraintStart_toEndOf="@id/iv_user_profile"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/tv_chat_user_status"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_title_color"
                app:layout_constraintStart_toEndOf="@id/iv_user_profile"
                app:layout_constraintTop_toBottomOf="@+id/tv_chat_with_username"
                android:layout_height="wrap_content"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/layout_header_user_detail"
            android:id="@+id/tv_same_user_message"
            android:textSize="15sp"
            android:padding="5dp"
            android:text="Great Sending Message to yourself, Its a nice way to keep note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EDEAEA"
            android:nestedScrollingEnabled="false"
            app:stackFromEnd="true"
            app:layout_constraintTop_toBottomOf="@id/tv_same_user_message"
            app:layout_constraintBottom_toTopOf="@id/layout_footer_send_message"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_footer_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_media_list"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <EditText
                android:id="@+id/et_send_message"
                app:layout_constraintTop_toBottomOf="@+id/rv_media_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                app:layout_constraintEnd_toStartOf="@id/btn_send_media"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_send_chat_msg"
                android:layout_width="50dp"
                android:background="@drawable/ic_send_icon"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/et_send_message"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <Button
                android:id="@+id/btn_send_media"
                android:layout_width="50dp"
                android:background="@android:drawable/ic_menu_camera"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@id/et_send_message"
                app:layout_constraintEnd_toStartOf="@+id/btn_send_chat_msg"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


