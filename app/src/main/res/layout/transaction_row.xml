<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_chat_row"
    android:layout_width="match_parent"
    android:longClickable="true"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:weightSum="1"
    >
    <LinearLayout
        android:id="@+id/layout_chat_container"
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/chat_bubble_out"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gv_chat_images"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
             />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="5dp"
                android:text="0.0"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_transaction_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_transaction_amount"
                android:padding="5dp"
                android:text="HI "
                android:textSize="15sp"
                android:textStyle="normal" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_message_status"
                android:layout_width="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_transaction_message"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="15dp" />
            <Button
                android:id="@+id/iv_transaction_failed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_transaction_message"
                android:layout_width="wrap_content"
                android:background="@android:color/holo_red_light"
                android:text="DISPUTE"
                android:layout_height="@dimen/medium_icon_height"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_message_status"
                />
            <Button
                android:id="@+id/iv_transaction_success"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/holo_green_dark"
                app:layout_constraintTop_toBottomOf="@+id/tv_transaction_message"
                android:layout_width="wrap_content"
                android:text="Accept"
                android:layout_height="@dimen/medium_icon_height"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_transaction_final_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_transaction_amount"
                app:placeholderImage="@drawable/transaction_successful"
                app:layout_constraintTop_toBottomOf="@+id/tv_transaction_message"
                android:layout_width="@dimen/medium_icon_width"
                android:layout_height="@dimen/medium_icon_height"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>