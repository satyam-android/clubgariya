<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:elevation="5dp"
        >
        <ImageView
            android:id="@+id/iv_source"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_source"
            app:layout_constraintStart_toEndOf="@id/iv_source"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/iv_source"
            app:layout_constraintBottom_toBottomOf="@id/iv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_post_Image"
            app:layout_constraintTop_toBottomOf="@id/iv_source"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_blog_description"
            app:layout_constraintTop_toBottomOf="@id/iv_post_Image"
            android:padding="3dp"
            android:text="@{model.description}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/rl_layout_update_like"
            app:layout_constraintBottom_toTopOf="@+id/rl_layout_like"
            app:layout_constraintTop_toBottomOf="@+id/tv_blog_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:src="@drawable/like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/blog_item_layout_height">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_like_last_user"
                android:layout_centerVertical="true"
                android:src="@drawable/like"
                android:layout_width="@dimen/blog_item_layout_width"
                android:layout_height="@dimen/blog_item_layout_height"/>
            <TextView
                android:layout_toRightOf="@id/iv_like_last_user"
                android:id="@+id/tv_like_last_user"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            android:src="@drawable/like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/blog_item_layout_height">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_like"
                android:layout_centerVertical="true"
                android:src="@drawable/like"
                android:layout_width="@dimen/blog_item_layout_width"
                android:layout_height="@dimen/blog_item_layout_height"/>
            <TextView
                android:layout_toRightOf="@id/iv_like"
                android:id="@+id/tv_like_count"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout_update_comment"
            app:layout_constraintBottom_toTopOf="@+id/rl_layout_comment"
            app:layout_constraintTop_toBottomOf="@+id/tv_blog_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/blog_item_layout_height">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_comment_last_user"
                android:layout_centerVertical="true"
                android:src="@drawable/profile"
                android:layout_width="@dimen/blog_item_layout_width"
                android:layout_height="@dimen/blog_item_layout_height"/>
            <TextView
                android:layout_toRightOf="@id/iv_comment_last_user"
                android:id="@+id/tv_comment_last_user"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/iv_comment_last_user"
                android:layout_below="@+id/tv_comment_last_user"
                android:id="@+id/tv_comment_last_comment"
                android:inputType="textShortMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="25dp"
            android:onClick="@{()-> itemclickListner.onCommentClick(model)}"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/blog_item_layout_height">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_comment"
                android:layout_centerVertical="true"
                android:src="@drawable/comment"
                android:layout_width="@dimen/blog_item_layout_width"
                android:layout_height="@dimen/blog_item_layout_height"/>
            <TextView
                android:layout_toRightOf="@id/iv_comment"
                android:id="@+id/tv_comment_count"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout_share"
            app:layout_constraintTop_toBottomOf="@+id/tv_blog_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/blog_item_layout_height">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_share"
                android:layout_centerVertical="true"
                android:src="@drawable/share"
                android:layout_width="@dimen/blog_item_layout_width"
                android:layout_height="@dimen/blog_item_layout_height"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
