<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="settingsModel"
            type="com.satyam.clubgariya.viewmodels.AppSettingsViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/app_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_app_priority"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Choose your OneClick Use preference"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="74dp" />

    <RadioGroup
        android:id="@+id/rg_view_preference"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         >

        <RadioButton
            android:id="@+id/rb_message_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message | Payment " />
        <RadioButton
            android:id="@+id/rb_payment_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment | Message " />
        <RadioButton
            android:id="@+id/rb_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Message " />
        <RadioButton
            android:id="@+id/rb_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Payment " />
    </RadioGroup>
    <Button
        android:id="@+id/btn_settings_save"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>